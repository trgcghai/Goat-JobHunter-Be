<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-5.0.xsd"
>

    <changeSet id="seed-role-admin" author="goat">
        <preConditions onFail="MARK_RAN">
            <sqlCheck expectedResult="0">
                SELECT COUNT(*) FROM roles WHERE name = 'SUPER_ADMIN';
            </sqlCheck>
        </preConditions>

        <insert tableName="roles">
            <column name="role_id" valueNumeric="1"/>
            <column name="name" value="SUPER_ADMIN"/>
            <column name="description" value="Admin will gain full permissions"/>
            <column name="active" valueBoolean="true"/>
        </insert>
    </changeSet>

    <changeSet id="seed-role-admin-permissions" author="goat">
        <preConditions onFail="MARK_RAN">
            <sqlCheck expectedResult="0">
                SELECT COUNT(*) FROM role_permission;
            </sqlCheck>
        </preConditions>

        <sql>
            INSERT INTO role_permission (role_id, permission_id)
            SELECT r.role_id, p.permission_id
            FROM roles r
                     CROSS JOIN permissions p
            WHERE r.name = 'SUPER_ADMIN';
        </sql>

    </changeSet>

</databaseChangeLog>